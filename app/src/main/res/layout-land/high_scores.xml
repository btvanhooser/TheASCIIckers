<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:id="@+id/high_scores_root"
    android:background="@color/teal">

    <!-- High Scores Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="Number of Tiles"
        tools:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:id="@+id/spinner2" />

    <TextView
        android:text="High Scores"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:id="@+id/highScoreLabel"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:textAlignment="center"
        tools:fontFamily="sans-serif"
        android:layout_gravity="center" />

    <!-- #1 Score Label-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <!-- #1 Label-->
        <TextView
            android:layout_marginLeft="175dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/Score1Label"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:text="1."
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
        <!-- #1 Player -->
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/player1Name"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="Melanie"/>
        <!-- #1 Player -->
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/hyph1"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text=":"/>
        <!-- #1 Score -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/player1Score"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="10000"/>
    </LinearLayout>

    <!-- #2 Score Label-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp">
        <!-- #1 Label-->
        <TextView
            android:layout_marginLeft="175dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/Score2Label"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:text="2."
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
        <!-- #1 Player -->
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/player2Name"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="Trump"/>
        <!-- #1 Player -->
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/hyph2"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text=":"/>
        <!-- #1 Score -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/player2Score"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="950"/>
    </LinearLayout>
    <!-- #3 Score Label-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp">
        <!-- #1 Label-->
        <TextView
            android:layout_marginLeft="175dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/Score3Label"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:text="3."
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
        <!-- #1 Player -->
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/player3Name"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="Harambe"/>
        <!-- #1 Player -->
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/hyph3"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text=":"/>
        <!-- #1 Score -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/player3Score"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="920"/>

    </LinearLayout>
</LinearLayout>